<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Traveller" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="header">
        <item name="backgroundColor">@color/teal_700</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white1</item>
        <item name="fontFamily">@font/aref_ruqaa</item>
        <item name="android:text">Traveller</item>
    </style>

    <style name="btncolour">
        <item name="backgroundColor">@color/purple_700</item>
    </style>

</resources>